@model IEnumerable<CharitySystem.Models.Event>

    @{
    ViewData["Title"] = "Список заходів";
    }

    <h2>Список заходів</h2>

    <p>
        <a class="btn btn-success" asp-action="Create">Додати захід</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Дата</th>
                <th>Опис</th>
                <th>Категорія</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Description</td>
                <td>@item.Category</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Деталі</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
