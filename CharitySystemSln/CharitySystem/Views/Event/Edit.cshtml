@model Event
<h2>Редагування заходу</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input asp-for="Title" placeholder="Назва" required />
    <textarea asp-for="Description" placeholder="Опис"></textarea>
    <input asp-for="Date" type="datetime-local" required />
    <input asp-for="Location" placeholder="Місце" />
    <input asp-for="Capacity" type="number" />
    <input asp-for="FundraisingGoal" type="number" step="0.01" />
    <input asp-for="Category" placeholder="Категорія" />
    <button type="submit">Зберегти</button>
</form>