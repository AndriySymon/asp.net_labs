@model CharitySystem.Models.RegisterViewModel

<h2>Реєстрація</h2>

<form asp-action="Register" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" placeholder="Ім'я" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" placeholder="Пароль" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" placeholder="Підтвердіть пароль" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit">Зареєструватися</button>
</form>

<a href="@Url.Action("Login", "Account")">Вже маєте акаунт? Увійти</a>


<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        background: white;
    }

    .form-control {
        border: 1px solid #ced4da;
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
        border: none;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0056b3, #004085);
        }
</style>
