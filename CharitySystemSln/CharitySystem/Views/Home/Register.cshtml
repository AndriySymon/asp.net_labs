@model CharitySystem.Models.EventRegistrationModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 rounded">
                <h2 class="text-center text-primary mb-4">Реєстрація на захід</h2>
                <h4 class="text-center text-dark">@Model.EventTitle</h4>

                <form method="post">
                    <div class="form-group mb-3">
                        <label for="FirstName" class="form-label">Ім'я</label>
                        <input type="text" class="form-control rounded-3" id="FirstName" name="FirstName" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="LastName" class="form-label">Прізвище</label>
                        <input type="text" class="form-control rounded-3" id="LastName" name="LastName" required />
                    </div>
                    <div class="form-group mb-4">
                        <label for="Email" class="form-label">Пошта</label>
                        <input type="email" class="form-control rounded-3" id="Email" name="Email" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2 rounded-3">Зареєструватися</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        background: white;
    }

    .form-control {
        border: 1px solid #ced4da;
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
        border: none;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0056b3, #004085);
        }
</style>
